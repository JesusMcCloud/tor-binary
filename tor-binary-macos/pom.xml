<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>com.cedricwalter</groupId>
        <artifactId>tor-binary</artifactId>
        <version>7.5</version>
    </parent>

    <properties>
        <release.dir>${project.basedir}/../release</release.dir>
    </properties>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>tor-binary-macos</artifactId>
    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.ant</groupId>
                        <artifactId>ant-compress</artifactId>
                        <version>1.4</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>unpack-osx</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <target>
                                <taskdef resource="org/apache/ant/compress/antlib.xml"
                                         classpathref="maven.plugin.classpath"/>

                                <get
                                    src="https://github.com/TheTorProject/gettorbrowser/releases/download/v${torbrowser.version}/TorBrowser-${torbrowser.version}-osx64_en-US.dmg"
                                    dest="${project.build.directory}/TorBrowser-${torbrowser.version}-osx64_en-US.dmg"
                                    skipexisting="true"/>
                                <get
                                    src="https://github.com/TheTorProject/gettorbrowser/releases/download/v${torbrowser.version}/TorBrowser-${torbrowser.version}-osx64_en-US.dmg.asc"
                                    dest="${project.build.directory}/TorBrowser-${torbrowser.version}-osx64_en-US.dmg.asc"
                                    skipexisting="true"/>

                                <exec executable="gpg" failonerror="true">
                                    <arg
                                        line="--auto-key-locate keyserver --keyserver pgp.mit.edu --keyserver-options auto-key-retrieve --verify ${project.build.directory}/TorBrowser-${torbrowser.version}-osx64_en-US.dmg.asc ${project.build.directory}/TorBrowser-${torbrowser.version}-osx64_en-US.dmg"></arg>
                                </exec>

                                <get
                                  src="https://sourceforge.net/projects/p7zip/files/p7zip/16.02/p7zip_16.02_x86_linux_bin.tar.bz2/download"
                                  dest="${project.build.directory}/p7zip.tar.bz2"
                                  skipexisting="true"/>
                                <bunzip2 src="${project.build.directory}/p7zip.tar.bz2" />
                                <untar src="${project.build.directory}/p7zip.tar"
                                       dest="${project.build.directory}/p7zip/" />

                                <chmod dir="${project.build.directory}/p7zip/p7zip_16.02/bin/" perm="+x" includes="**/*"/>

                                <exec executable="${project.build.directory}/p7zip/p7zip_16.02/bin/7z" failonerror="true">
                                    <arg
                                        line="x ${project.build.directory}/TorBrowser-${torbrowser.version}-osx64_en-US.dmg -o${project.build.directory}/osx -aoa TorBrowser.app/Contents/MacOS/Tor/*"></arg>
                                </exec>

                                <tar destfile="${project.build.directory}/osx64.tar">
                                    <tarfileset dir="${project.build.directory}/osx/TorBrowser.app/Contents/MacOS/Tor/"
                                    />
                                </tar>
                                <xz src="${project.build.directory}/osx64.tar"
                                    destfile="${project.basedir}/src/main/resources/native/osx/x64/tor.tar.xz"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>1.8</version>
                </plugin>

            </plugins>
        </pluginManagement>


    </build>
</project>
